{
  "manifest_version": 3,
  "name": "TubeLock",
  "version": "1.0.0",
  "description": "A simple extension that blocks YouTube after you've spent some time on the site",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icon-16.svg",
      "32": "assets/icon-32.svg",
      "48": "assets/icon-48.svg",
      "128": "assets/icon-128.svg"
    },
    "default_title": "TubeLock"
  },
  "icons": {
    "16": "assets/icon-16.svg",
    "32": "assets/icon-32.svg",
    "48": "assets/icon-48.svg",
    "128": "assets/icon-128.svg"
  }
}
