{
  "manifest_version": 3,
  "name": "ClockLock",
  "version": "1.1.0",
  "description": "ClockLock is a simple productivity tool that help you to break free from endless scrolling.",
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "clocklock@antouhou.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/clocklock_logo_solid_16.png",
      "32": "assets/clocklock_logo_solid_32.png",
      "48": "assets/clocklock_logo_solid_48.png",
      "128": "assets/clocklock_logo_solid_128.png"
    },
    "default_title": "ClockLock"
  },
  "icons": {
    "16": "assets/clocklock_logo_solid_16.png",
    "32": "assets/clocklock_logo_solid_32.png",
    "48": "assets/clocklock_logo_solid_48.png",
    "128": "assets/clocklock_logo_solid_128.png"
  }
}
